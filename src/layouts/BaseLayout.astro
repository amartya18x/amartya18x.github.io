---
import '../styles/global.css';

const {
  title = 'Amartya Sanyal',
  description = 'Personal website of Amartya Sanyal.'
} = Astro.props;

const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.pathname;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Amartya Sanyal" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="canonical" href={canonical} />
    <link rel="icon" href="/favicon.ico" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-9GV2DDDT08"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-9GV2DDDT08');
    </script>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
